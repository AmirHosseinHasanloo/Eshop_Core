@model List<Core.DTOs.CompareItemViewModel>
@if (Model.Any())
{
    <section class="border-radius compare-side">
        <header><h3> لیست مقایسه </h3></header>
        <article>
            <ul>
                @foreach (var item in Model)

                {
                    <li>
                        <i onclick="DeleteFromList(@item.ProductId)" class="delete-compare">X</i>
                        <a href="/Product/@item.ProductId"> @item.ProductTitle </a>
                    </li>
                }
            </ul>
            <a href="/Compare" class="show-compare-list border-radius">مشاهده لیست مقایسه</a>
        </article>
    </section>


}