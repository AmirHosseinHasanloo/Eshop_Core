@model DataLayer.Entities.Product

<div class="col-md-4 col-sm-6">
    <div class="border-radius">
        <span>
            <a href="/Product/@Model.ProductId">
                <img src="/ProductImage/@Model.ImageName" class="card-img-top img-responsive img-rounded margin-top-3">
            </a>
        </span>
        <h2> <a href="/Product/@Model.ProductId"> @Model.Title </a></h2>
        <h6>افزودن به لیست مقایسه <input type="checkbox" onchange="AddToCompareList(@Model.ProductId)"></h6>
        <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
            <label>@Model.Price.ToString("#,0")  تومان</label>
        </span>
        <a onclick="AddOrder(@Model.ProductId)" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
            <label><i class="fa fa-shopping-basket"></i></label>
        </a>
    </div>
</div>


<script>
    function AddOrder(id) {
        $.ajax({
            url: "/Basket/AddOrder/" + id,
            type: "Get"
        }).done(function (result) {
            $("#basket").html(result);
        });
    }
</script>