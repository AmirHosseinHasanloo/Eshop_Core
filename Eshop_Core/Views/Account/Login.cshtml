@model DataLayer.LoginViewModel
@{
    ViewData["Title"] = "ورود";
}
<div class="col-md-9 col-sm-8 left-side-content internal-style">
    @if (ViewBag.IsSuccess != null)
    {
        <div class="alert alert-success shadow-lg text-center">
            ورود با موفقیت انجام شد
            <script src="/js/redirect.js"></script>
        </div>
    }
    <section class="border-radius">
        <header>
            <h3> ورود به سایت </h3></header>
        <article>
            <div class="col-md-10 col-sm-10 col-xs-12">

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="نام کاربری ">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="رمز عبور">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <p><a asp-controller="Account" asp-action="ForgotPassword"><i class="fa fa-lock"></i>رمز عبور خود را فراموش کرده ام !</a></p>
                    <p><a asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus"></i>ثبت نام کنید!</a></p>
                    <label><input asp-for="RememberMe"> مرا بخاطر بسپار! </label>
                    <input type="submit" value=" ورود به سایت">
                </form>

            </div>
            <div class="clearfix"></div>
        </article>
    </section>

</div>