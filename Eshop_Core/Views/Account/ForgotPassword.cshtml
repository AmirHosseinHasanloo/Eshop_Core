@model Core.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}
<div class="col-md-9 col-sm-8 left-side-content internal-style">
    <section class="border-radius">
        <header><h3> بازیابی رمز عبور </h3></header>
        <article>
            <div class="col-md-10 col-sm-10 col-xs-12">

                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="ایمیل ">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <input class="btn btn-primary" type="submit" value=" ارسال">
                </form>
            </div>
            <div class="clearfix"></div>
        </article>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}