@model DataLayer.RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}
<div class="col-md-9 col-sm-8 left-side-content internal-style">
    <section class="border-radius">
        <header><h3> ثبت نام </h3></header>
        <article>
            <div class="col-md-10 col-sm-10 col-xs-12">

                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="UserName" class="form-control" placeholder="نام کاربری ">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder=" ایمیل ">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="رمز عبور">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="RePassword" class="form-control" placeholder="تکرار رمز عبور ">
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                    </div>
                    <input type="submit" value=" ثبت نام">
                </form>
            </div>
            <div class="clearfix"></div>
        </article>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
